<%- include('../partials/head') %>
<style>
  body {
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f3f4f6;
  }

  .home-container {
    max-width: 1200px;
    margin: 3rem auto;
    padding: 2rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  h1 {
    text-align: center;
    color: #4f46e5;
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }

  .home-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    padding: 0;
    list-style: none;
  }

  .home-item {
    background-color: #ffffff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .home-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 20px rgba(0,0,0,0.15);
  }

  .product-img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .product-info {
    padding: 1rem;
    text-align: center;
  }

  .home-name {
    font-size: 1.3rem;
    font-weight: bold;
    color: #111827;
    margin-bottom: 0.5rem;
  }

  .home-price {
    font-size: 1.1rem;
    color: #10b981;
    margin-bottom: 0.3rem;
  }

  .home-seller {
    font-size: 0.9rem;
    color: #6b7280;
    margin-bottom: 1rem;
  }

  .book-button {
    background-color: #3b82f6;
    color: white;
    border: none;
    border-radius: 8px;
    padding: 0.7rem 1.5rem;
    font-size: 1rem;
    cursor: pointer;
    margin-bottom: 1rem;
    transition: background-color 0.3s ease;
  }

  .book-button:hover {
    background-color: #2563eb;
  }
  .remove-fav-button {
  background-color: #ef4444;
  color: white;
  border: none;
  border-radius: 8px;
  padding: 0.6rem 1.2rem;
  font-size: 0.95rem;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.2s ease;
  margin-top: 0.5rem;
}

.remove-fav-button:hover {
  background-color: #dc2626;
  transform: translateY(-2px);
}

</style>
</head>
<body>
    <%- include('../partials/nav') %>

    <main class="home-container">
      <h1>Here are your Favorite Items ❤️</h1>

      <ul class="home-list">
        <%favProducts .forEach(home => { %>
          <li class="home-item">
            <img 
              src="<%= home.photo %>" 
              alt="Product Image" 
              class="product-img" 
              onerror="this.onerror=null;this.src='/images/default.jpg';"
            >
            <div class="product-info">
              <h3 class="home-name"><%= home.productName %></h3>
              <p class="home-price">₹<%= home.price %></p>
              <p class="home-seller">Seller: <%= home.sellerName %></p>
              <button class="book-button">Book</button>
              <form action="/favourites/delete/<%= home._id %>" method="post">
                <button 
                type="submit" 
                class="remove-fav-button"
              >
               Remove from Favourite
              </button>
              
              </form>
            </div>
          </li>
        <% }) %> 
      </ul>

    </main>

</body>
</html>
