<%- include('../partials/head') %>
<style>
  body {
    margin: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f3f4f6;
    color: #111827;
  }

  h1 {
    text-align: center;
    margin: 2rem 0 1rem 0;
    font-size: 2.8rem;
    font-weight: bold;
    color: #1f2937;
  }

  .home-list {
    list-style: none;
    padding: 0;
    margin: 2rem auto;
    max-width: 1000px;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .home-item {
    background-color: #ffffff;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: hidden;
  }

  .home-item:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
  }

  .product-img {
    width: 100%;
    max-width: 500px;
    height: 300px;
    object-fit: cover;
    border-radius: 12px;
    transition: transform 0.3s ease;
  }

  .home-item:hover .product-img {
    transform: scale(1.05);
  }

  .product-info {
    text-align: center;
    padding: 1rem 0;
  }

  .home-name {
    font-size: 1.8rem;
    font-weight: 700;
    color: #111827;
    margin: 1rem 0 0.5rem 0;
  }

  .home-price {
    font-size: 1.2rem;
    color: #10b981; /* Emerald green */
    margin: 0.5rem 0;
    font-weight: 600;
  }

  .home-seller {
    font-size: 1rem;
    color: #6b7280;
    margin-bottom: 1rem;
  }

  button {
    background: linear-gradient(to right, #3b82f6, #2563eb);
    color: white;
    padding: 0.8rem 2rem;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 4px 14px rgba(0,0,0,0.1);
    transition: background 0.3s ease, transform 0.2s ease;
  }

  button:hover {
    background: linear-gradient(to right, #2563eb, #1d4ed8);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .home-list {
      padding: 0 1rem;
    }
  }
</style>
</head>
<body>
  <%- include('../partials/nav') %> 

  <h1>Home Details</h1>

  <div>
    <ul class="home-list">
    <li class="home-item">
      <img 
        src="<%= product.photo %>" 
        alt="Product Image" 
        class="product-img"
      >
      <div class="product-info">
        <h3 class="home-name"><%= product.productName %></h3>
        <p class="home-price">â‚¹<%= product.price %></p>
        <p class="home-seller">Seller: <%= product.sellerName %></p>
        <%- include('../partials/favorites') %>
      </div>
    </li>
</ul>
</div>
</body>
</html>
