<%- include('../partials/head') %>
<style>
  body {
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f9fafb;
    color: #111827;
  }

  .home-list {
    list-style: none;
    padding: 2rem;
    margin: 2rem auto;
    max-width: 1200px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .home-item {
    background-color: #ffffff;
    padding: 1rem;
    border-radius: 12px;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    overflow: hidden;
  }

  .home-item:hover {
    transform: translateY(-6px);
    box-shadow: 0 10px 24px rgba(0, 0, 0, 0.15);
  }

  .product-img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-radius: 10px;
  }

  .product-info {
    text-align: center;
    padding: 1rem 0;
  }

  .home-name {
    font-size: 1.4rem;
    font-weight: bold;
    color: #1f2937;
    margin: 0.6rem 0;
  }

  .home-price {
    font-size: 1.2rem;
    color: #10b981;
    font-weight: 600;
    margin: 0.4rem 0;
  }

  .home-seller {
    font-size: 0.95rem;
    color: #6b7280;
    margin-bottom: 1rem;
  }

  .button-group {
    display: flex;
    justify-content: center;
    gap: 0.7rem;
    margin-bottom: 1rem;
  }

  .btn {
    padding: 0.6rem 1.4rem;
    font-size: 1rem;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .edit{
    background-color: #3b82f6;
    color: #ffffff;
    width: 100px;
    border-radius: 7px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .edit:hover {
    background-color: #2563eb;
    transform: scale(1.05);
  }

  .btn-delete {
    background-color: #ef4444;
    color: #ffffff;
  }

  .btn-delete:hover {
    background-color: #dc2626;
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .home-list {
      grid-template-columns: 1fr;
      padding: 1rem;
    }

    .product-img {
      height: 180px;
    }
  }
</style>
</head>

<body>
    <%- include('../partials/nav') %>

    <ul class="home-list">
      <% registeredProducts.forEach(home => { %>
        <li class="home-item">
          <img 
            src="<%= home.photo %>" 
            alt="Product Image"
            class="product-img" 
            onerror="this.onerror=null;this.src='/images/default.jpg';"
          >
          <div class="product-info">
            <h3 class="home-name"><%= home.productName %></h3>
            <p class="home-price">â‚¹<%= home.price %></p>
            <p class="home-seller">Seller: <%= home.sellerName %></p>
          </div>
          <div class="button-group">
            <a class ='edit' href="/host/edit-products/<%=home._id%>?editing=true">Edit</a>
            <form action="/host/delete-product/<%= home._id %>" method="POST">
              <button type="submit" class="btn btn-delete">Delete</button>

            </form>
          </div>
        </li>
      <% }) %>
    </ul>
</body>
</html>
