<%- include('../partials/head') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
  body {
    margin: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f9fafb;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .container {
    max-width: 450px;
    margin: auto;
    padding: 3rem 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h1 {
    color: #1f2937;
    margin-bottom: 1.5rem;
    font-size: 2rem;
  }

  form {
    width: 100%;
    background-color: #ffffff;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .input-group {
    display: flex;
    align-items: center;
    border: 1px solid #d1d5db;
    border-radius: 10px;
    padding: 0.6rem 1rem;
    gap: 0.5rem;
    background-color: white;
  }

  .input-group i {
    color: #6b7280;
  }

  .input-group input {
    border: none;
    outline: none;
    width: 100%;
    font-size: 1rem;
    background: transparent;
  }

  input[type="submit"] {
    background-color: #3b82f6;
    color: white;
    border: none;
    padding: 0.9rem;
    font-size: 1rem;
    border-radius: 10px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  input[type="submit"]:hover {
    background-color: #2563eb;
  }

  .form-footer {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: #374151;
  }

  label span {
    margin-left: 0.5rem;
  }

  .radio-group, .checkbox-group {
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  @media (max-width: 500px) {
    .container {
      padding: 2rem 1rem;
    }

    form {
      padding: 1.5rem;
    }
  }
</style>
</head>

<body>
  <%- include('../partials/nav') %>
  <div class="container">
    <h1><i class="fas fa-user-plus"></i> Create Your Account</h1>
    <form action="/signup" method="post"> 
  <%- include('../partials/errors') %>
      <div class="input-group">
        <i class="fas fa-user"></i>
        <input type="text" name="firstName" placeholder="First name" value="<%= oldInput.firstName?oldInput.firstName:''%>"
        required>
      </div>
      <div class="input-group">
        <i class="fas fa-user"></i>
        <input type="text" name="lastName" value="<%= oldInput.lastName?oldInput.lastName:''%>" placeholder="Last name"
        >
      </div>
      <div class="input-group">
        <i class="fas fa-envelope"></i>
        <input type="email" name="email" value="<%= oldInput.email?oldInput.email:''%>" placeholder="abc@gmail.com" required>
      </div>
      <div class="input-group">
        <i class="fas fa-lock"></i>
        <input type="password" name="password" placeholder="Password" required>
      </div>
      <div class="input-group">
        <i class="fas fa-lock"></i>
        <input type="password" name="confirmPassword" placeholder="Confirm password" required>
      </div>

      <div class="form-footer">
        <p><i class="fas fa-user-tag"></i> User Type:</p>
        <div class="radio-group">
          <label>
  <input type="radio" name="userType" value="Guest"
    <%= oldInput.userType === 'Guest' ? 'checked' : '' %> >
  <span>Guest</span>
</label>
          <label>
            <input type="radio" name="userType" value="Host" <%= oldInput.userType === 'Host' ? 'checked' : '' %> >
            <span>Host</span>
          </label>
        </div>
        <div class="checkbox-group">
          <label><input type="checkbox" name="term" required><span>I agree to the terms and conditions</span></label>
        </div>
      </div>

      <input type="submit" value="Sign Up">
    </form>
  </div>
</body>
</html>
